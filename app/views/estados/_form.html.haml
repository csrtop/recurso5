= form_for @estado do |f|
  - if @estado.errors.any?
    #error_explanation
      %h2= "#{pluralize(@estado.errors.count, "error")} prohibited this estado from being saved:"
      %ul
        - @estado.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :estado
    = f.text_field :estado
  .actions
    = f.submit 'Save'
