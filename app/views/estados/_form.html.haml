= form_for @estado do |f|
  - if @estado.errors.any?
    #error_explanation
      %h2= "#{pluralize(@estado.errors.count, "error")} prohibited this estado from being saved:"
      %ul
        - @estado.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :no_estado
    = f.number_field :no_estado
  .field
    = f.label :descripcion
    = f.text_field :descripcion
  .actions
    = f.submit 'Grabar', class: "btn btn-outline-primary"
