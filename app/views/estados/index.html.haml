%h1 Listing estados

%table
  %thead
    %tr
      %th Estado
      %th
      %th
      %th

  %tbody
    - @estados.each do |estado|
      %tr
        %td= estado.estado
        %td= link_to 'Show', estado
        %td= link_to 'Edit', edit_estado_path(estado)
        %td= link_to 'Destroy', estado, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Estado', new_estado_path
