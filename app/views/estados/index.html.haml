        -#%td= link_to 'Edit', edit_estado_path(estado)
        -#%td= link_to 'Destroy', estado, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'Nuevo Estado', new_estado_path, class: "btn btn-outline-primary"
