= form_for @pasillo do |f|
  - if @pasillo.errors.any?
    #error_explanation
      %h2= "#{pluralize(@pasillo.errors.count, "error")} prohibited this pasillo from being saved:"
      %ul
        - @pasillo.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :pasillo
    = f.text_field :pasillo
  .field
    = f.hidden_field :club
    = f.hidden_field :club_id, { :value => current_user.club_id}
  .actions
    = f.submit 'Save'
