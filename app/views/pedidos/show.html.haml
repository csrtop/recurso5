%p#notice= notice
- (0...@pedido.pictures.count).each do |image|
  %div{:style => "width:300px; height:300px;"}
    = image_tag(@pedido.pictures[image], style:'with:50%; height:50%')

%p
  %b Orden:
  = @pedido.orden
%p
  %b Oms:
  = @pedido.OMS
%p
  %b No items:
  = @pedido.no_items
%p
  %b Socio:
  = @pedido.socio
%p
  %b Fecha orden:
  = @pedido.fecha_orden
%p
  %b Club:
  = @pedido.club

= link_to 'Editar', edit_pedido_path(@pedido), class: "btn btn-outline-warning"
\|
= link_to 'Regresar', pedidos_path, class: "btn btn-outline-secondary"
