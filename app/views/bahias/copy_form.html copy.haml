= form_for @bahia do |f|
  - if @bahia.errors.any?
    #error_explanation
      %h2= "#{pluralize(@bahia.errors.count, "error")} prohibited this bahia from being saved:"
      %ul
        - @bahia.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :bahia
    = f.text_field :bahia
  .field
    = f.hidden_field :club
    = f.hidden_field :club_id, { :value => current_user.club_id}
  .actions
    = f.submit 'Guardar', class: "btn btn-outline-primary"
