!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}
    %title Registro Click And Go
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'

= render 'layouts/navbar'
-if user_signed_in?
  %h1
  Usuario actual :
  = current_user.last_name
  %h1
  %form.form-inline.my-2.my-lg-0{:action => "/search"}
    %input.form-control.mr-sm-2{"aria-label" => "Search", :name => "q", :placeholder => "Buscar OMS", :type => "text"}
    %button.btn.btn-outline-success.my-2.my-sm-0{:type => "submit"} Buscar
-else

.container-fluid
  %p.notice= notice
  %p.alert= alert

%body
  .container
  = yield
%footer.blockquote-footer
  © Developed by: César Top

-# = stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'

