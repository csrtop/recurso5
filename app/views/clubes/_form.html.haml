= form_for @club do |f|
  - if @club.errors.any?
    #error_explanation
      %h2= "#{pluralize(@club.errors.count, "error")} prohibited this club from being saved:"
      %ul
        - @club.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :no_club
    = f.number_field :no_club
  .field
    = f.label :nombre
    = f.text_field :nombre
  .actions
    = f.submit 'Save', class: "btn btn-outline-primary"
