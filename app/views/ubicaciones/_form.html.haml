= form_for [@club, @ubicacion], html: { multipart: true } do |f|
  - if @ubicacion.errors.any?
    #error_explanation
      %h2= "#{pluralize(@ubicacion.errors.count, "error")} prohibited this ubicacion from being saved:"
      %ul
        - @ubicacion.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :club
    = f.text_field :club
  .field
    = f.label :pedido
    = f.text_field :pedido
  .actions
    = f.submit 'Save'
